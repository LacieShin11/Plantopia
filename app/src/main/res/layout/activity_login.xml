<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="100dp"
            android:fontFamily="sans-serif"
            android:text="Plantopia"
            android:textColor="@android:color/black"
            android:textSize="50sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/sign_in_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="60dp"
            android:background="@drawable/sign_btn_black_custom"
            android:fontFamily="sans-serif"
            android:text="SIGN IN"
            android:onClick="signInBtnOnClicked"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/sign_facebook_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:background="@drawable/sign_btn_white_custom"
            android:fontFamily="sans-serif"
            android:text="SIGN WITH FACEBOOK"
            android:textSize="18sp" />

        <Button
            android:id="@+id/make_account_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif"
            android:text="New Account?"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>